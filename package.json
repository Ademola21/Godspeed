{
  "name": "yoruba-cinemax",
  "version": "1.0.0",
  "description": "A premium Yoruba movie streaming website with an integrated admin Telegram bot.",
  "main": "dist/server.js",
  "scripts": {
    "build:client": "esbuild src/index.tsx --bundle --outfile=public/dist/index.js --loader:.tsx=tsx --jsx=automatic",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/server.js",
    "start:bot": "node dist/bot/run.js",
    "start:bot-standalone": "node dist/bot-standalone.js",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "esbuild src/index.tsx --bundle --outfile=public/dist/index.js --loader:.tsx=tsx --jsx=automatic --watch",
    "dev:server": "ts-node-dev --respawn --transpile-only server.ts",
    "postinstall": "npm run build",
    "azure:build": "npm ci && npm run build",
    "azure:start": "npm start"
  },
  "keywords": [
    "react",
    "typescript",
    "express",
    "telegram",
    "bot",
    "azure-openai",
    "azure",
    "app-service",
    "yoruba",
    "streaming",
    "movies"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "openai": "^4.28.0",
    "@google/generative-ai": "^0.24.1",
    "express": "^4.19.2",
    "hls.js": "^1.5.8",
    "node-telegram-bot-api": "^0.63.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "vite": "^7.1.5",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/node-telegram-bot-api": "^0.64.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
